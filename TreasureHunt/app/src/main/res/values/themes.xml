<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreasureHunt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundSmall" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--    <item name="android:foreground">?android:attr/selectableItemBackground</item>-->
    <!--    <item name="strokeWidth">1dp</item>-->
    <!--    <item name="strokeColor">@color/purple_200</item>-->
    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/purple_50</item>
        <item name="background">@color/purple_500</item>
        <item name="iconTint">@color/purple_500</item>
        <item name="rippleColor">@color/purple_200</item>
    </style>

    <style name="BottomSheetButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">16dp</item>
        <item name="drawableTint">@color/purple_200</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>